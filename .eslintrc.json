{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true,
        "browser": false
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}